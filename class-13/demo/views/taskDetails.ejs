<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
</head>
  
<body>
    <%- include ('header.ejs') %>
    <main>
        <%console.log(task); %>
        <ul>
            <li>
                <h4><%= task.title %></h4>
                <p><%= task.description %></p>
                <p><%= task.contact %></p>
                <p><%= task.status %></p>
                <p><%= task.category %></p>

            </li>
        </ul>

        <form action="/delete/<%=task.id%>?_method=delete" method="post">
            <button type="submit">Delete</button>
        </form>

        <button id='update_btn'>Update</button>
        <section id='update_form'>
            <h2>Update Task</h2>
            <form action="/update/<%=task.id%>?_method=put" method="post">
                <input type="text" name="title" value="<%= task.title %>">
                <input type="text" name="status" value="<%= task.status %>">
                <input type="text" name="category" value="<%= task.category %>">
                <input type="text" name="contact" value="<%= task.contact %>">
                <textarea name="description" cols="30" rows="10"><%= task.description %></textarea>
                <button type ='submit'> Update Task</button>
            </form>
        </section>


    </main>
<script src="https://code.jquery.com/jquery-3.4.1.js"></script>
<script src="/app.js"></script>
</body>

</html>